<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <h1 class="logo me-auto me-lg-0">@Html.ActionLink("Nicole", "Index", "Home")</h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo"><img src="~/assets/img/logo.png" alt="" class="img-fluid"></a> -->

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Resume", "Home")">Resume</a></li>
                    <li><a href="@Url.Action("Links", "Home")">Links</a></li>
                    <li><a href="@Url.Action("Portfolio", "Home")">Portfolio</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

            <div class="header-social-links">
                <a href="https://www.linkedin.com/in/nicole-park-993660173/" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
            </div>
        </div>

    </header><!-- End Header -->
