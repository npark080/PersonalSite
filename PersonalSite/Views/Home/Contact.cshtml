@model PersonalSite.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

  <main id="main">

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Contact</h2>
          <p>Get in touch!</p>
        </div>

        <div>
          <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.274884998462!2d-94.60958528389634!3d38.96339085065514!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0e925e366ed0f%3A0x73aec4617abd2f03!2sCentriq%20Training!5e0!3m2!1sen!2sus!4v1630519113795!5m2!1sen!2sus" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="row mt-5">

          <div class="col-lg-4">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>Lawrence, KS</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>npark080@gmail.com</p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">

            <form asp-action="Contact" class="php-email-form">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <input asp-for="Name" class="form-control" name="name" id="name" placeholder="Your Name" required/>
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input asp-for="Email" class="form-control" name="email" id="email" placeholder="Your Email" required />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>
              <div class="form-group mt-3">
                  <input asp-for="Subject" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                  <span asp-validation-for="Subject" class="text-danger"></span>
              </div>
              <div class="form-group mt-3">
                  <textarea asp-for="Message" class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                  <span asp-validation-for="Message" class="text-danger"></span>
              </div>
              <div class="text-center"><input type="submit" value="Submit" class="btn btn-light"/> </div>
            </form>
          </div>
        </div>
      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
